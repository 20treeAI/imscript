CC="colorgcc -std=c99 -pedantic-errors -Wall -Wextra -Wshadow"
FLGS="-Wno-unused -g"
LIBS="iio.o -ltiff -lpng -lfftw3f"
OUTDIR="bin/"

PROGS="plambda"
PROGS="sort harris closeup gblur plambda synflow flowdiv viewflow faxpb downsa component qeasy vecstack backflow rgbcube iminfo fnorm faxpby"

$CC $FLGS paraflow.c $LIBS -o ${OUTDIR}paraflow -lgsl -lgslcblas

for i in $PROGS; do
	$CC $FLGS $i.c $LIBS -o ${OUTDIR}$i
done
